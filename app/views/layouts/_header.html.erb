<header class="navbar navbar-default">
  <!-- Left Header Navigation -->
  <ul class="nav navbar-nav-custom">
    <!-- Main Sidebar Toggle Button -->
    <li>
      <a href="javascript:void(0)" onclick="App.sidebar('toggle-sidebar');">
      <i class="fa fa-bars fa-fw"></i>
      </a>
    </li>
  </ul>
  <!-- END Left Header Navigation -->
  <!-- Search Form -->
  <form action="page_ready_search_results.html" method="post" class="navbar-form-custom" role="search">
    <div class="form-group">
      <input type="text" id="top-search" name="top-search" class="form-control" placeholder="Search..">
    </div>
  </form>
  <!-- END Search Form -->
  <!-- Right Header Navigation -->
  <ul class="nav navbar-nav-custom pull-right">
    <!-- User Dropdown -->
    <li class="dropdown">
      <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">
      <% if current_user.avatar? %>
        <%= image_tag current_user.avatar %>
      <% else %>
        <%= image_tag "placeholders/avatars/profile.png" %> 
      <% end %>
      <i class="fa fa-angle-down"></i>
      </a>
      <ul class="dropdown-menu dropdown-custom dropdown-menu-right">
        <li class="dropdown-header text-center"><%= t "header.account"%></li>
        <li>
          <%= link_to raw('<i class="gi gi-user pull-right"></i> t("header.profile")'), current_user %>
          <a href="#modal-user-settings" data-toggle="modal">
          <i class="fa fa-cog fa-fw pull-right"></i>
          Settings
          </a>
        </li>
        <li class="divider"></li>
        <li>
          <%= link_to raw('<i class="gi gi-exit pull-right"></i>Logout'), logout_path, method: :delete %>
        </li>
      </ul>
    </li>
    <!-- END User Dropdown -->
  </ul>
  <!-- END Right Header Navigation -->
</header>
