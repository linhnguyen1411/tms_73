<tr>
  <td class="text-center"><%=user.id%></td>
  <td class="text-center"><%= user.avatar.present? ? image_tag(user.avatar ,class: "avatar") : "abc" %></td>
  <td><%= link_to user.name, user %></td>
  <td><%= user.email%></td>
  <td class="text-center">
    <div class="btn-group">
      <%= link_to edit_user_path(user.id), class: "btn btn-xs btn-default" do %><i class="fa fa-pencil"></i><% end %>
      <% if current_user.admin? && !current_user?(user) %>
      <%= link_to user, method: :delete, data: {confirm: t("user.user.confirm")}, class: "btn btn-xs btn-danger" do %><i class="fa fa-times"></i> <% end %>
      <% end %>
    </div>
  </td>
</tr>
